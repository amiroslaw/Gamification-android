<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_createDeckForm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xyz.miroslaw.gamification_android.createDeck.CreateDeckFormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/txt_createDeck_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/createDeck_name" />

        <EditText
            android:id="@+id/et_createDeck_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="@string/createDeck_enterName"
            android:textColor="@android:color/black"
            android:visibility="visible" />

        <TextView
            android:id="@+id/txt_createDeck_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/createDeck_description" />

        <EditText
            android:id="@+id/et_createDeck_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="@string/createDeck_enterDescription"
            android:textColor="@android:color/black"
            android:visibility="visible" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            android:orientation="horizontal"
            <Button
                android:id="@+id/btn_createDeck_setImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/createDeck_setImgGallery" />

            <Button
                android:id="@+id/btn_createDeck_cameraImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/createDeck_setImgCamera"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_formFragment_award"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            app:srcCompat="@mipmap/ic_launcher" />

    </LinearLayout>

</FrameLayout>
