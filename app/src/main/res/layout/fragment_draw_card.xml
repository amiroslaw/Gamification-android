<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xyz.miroslaw.gamification_android.drawCard.DrawCardFragment"
    android:id="@+id/fragment_drawCard"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">
    <Button
        android:id="@+id/btn_draw_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_exit"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_draw_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_next"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp" />


    <ImageView
        android:id="@+id/iv_draw_award"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="24dp"
        app:layout_constraintHorizontal_bias="0.511"
        android:layout_marginRight="24dp"
        app:layout_constraintBottom_toTopOf="@+id/rl_createCard_typeValue"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_draw_title" />

    <TextView
        android:id="@+id/tv_draw_description"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:text="desc"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_createCard_typeValue"
        android:layout_marginLeft="24dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginRight="24dp" />

    <TextView
        android:id="@+id/tv_draw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="8dp"
        android:text="Title"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/iv_draw_award"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_draw_exit"
        app:layout_constraintVertical_chainStyle="spread" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="0dp" />

    <RelativeLayout
        android:id="@+id/rl_createCard_typeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_createCard_next"
        android:layout_toEndOf="@id/txt_createCard_type"
        android:paddingTop="5dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_draw_description"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_draw_award"></RelativeLayout>


</android.support.constraint.ConstraintLayout>
